#!/bin/bash
# Usage:
# combine-cdn-logs releases/clojars-web-current.jar /tmp/foo.log [20161109]

set -e

clojars_jar=$1
output_file=$2
DATE=$3
if [ -z "$DATE" ]; then
    DATE=$(date --date='1 day ago' +%Y%m%d)
fi

java -cp $clojars_jar clojure.main -m clojars.tools.combine-cdn-logs \
     $CDN_LOG_CONTAINER $CLOUDFILES_USER $CLOUDFILES_TOKEN \
     $S3_LOG_BUCKET $AWS_REGION $AWS_ACCESS_KEY_ID $AWS_SECRET_ACCESS_KEY \
     $DATE $output_file
